@model List<Transportation.Models.TblProduct>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}
@Html.Partial("Statistic")

<h2>Ürün Listesi</h2>

<table class=" table table-striped">
    <tr>
        <th>#</th>
        <th>Ürün Adı</th>
        <th>Ürün Boyut Tipi</th>
        <th>Ürün Boyutu</th>
        <th>Ürün Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        sayac++;
        <tr>
            <td>@sayac</td>
            <td>@item.ProductName</td>
            <td>@item.ProductSizeType</td>
            <td>@item.ProductSize</td>
            <td>@item.ProductDescription</td>
            <td><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-danger btn-round">Sil</a></td>
            <td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-success btn-round">Güncelle</a></td>
        </tr>
    }

</table>
<a href="/Product/AddProduct/" class="btn btn-primary btn-round">Yeni Ürün Kaydı</a>

