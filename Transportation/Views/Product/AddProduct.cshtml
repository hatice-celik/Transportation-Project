@model Transportation.Models.TblProduct
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Ürün Kaydı</h2>
<form method="post">
    <label>Ürün Adı</label>
    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
    <br />
    <label>Ürün Boyut Tipi</label>
    @Html.TextBoxFor(x => x.ProductSizeType, new { @class = "form-control" })
    <br />
    <label>Ürün Boyutu</label>
    @Html.TextBoxFor(x => x.ProductSize, new { @class = "form-control" })
    <br />
    <label>Ürün Açıklaması</label>
    @Html.TextAreaFor(x => x.ProductDescription, 5, 1, new { @class = "form-control" })
    <br />
    <label>Ürün Kategorisi</label>
    @Html.DropDownListFor(x => x.ProductCategory,(List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary btn-round">Ürün Ekle</button>
</form>

