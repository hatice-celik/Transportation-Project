@model Transportation.Models.TblCategory
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <label>Kategori ID</label>
    @Html.TextBoxFor(x=>x.CategoryID, new { @class = "form-control" })
    <br />
    <label>Kategori Adı</label>
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    <br />
    <button class="btn btn-success btn-round">Kategoriyi Güncelle</button>
</form>
@*Http Helper*@
